
@model Staj1_MvcProje.Models.Entity.TBLKATEGORILER
@{
    ViewBag.Title = "KategoriGuncel";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Kategori", FormMethod.Post)) //form  html'de oluşturmak ve işlemek için kullanılır.
{
    <div class = "form-group">
        @Html.LabelFor(m=>m.KATEGORIID)
        @Html.TextBoxFor(m=>m.KATEGORIID, new { @class = "form-control" })
        <br />
        @Html.LabelFor(m=>m.KATEGORIAD)
        @Html.TextBoxFor(m=>m.KATEGORIAD, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <button class="btn" style="background-color: #869bd9; color: white ">Kategori Güncelle</button>
    </div>
    }

