@using PagedList;
@using PagedList.Mvc;

@model IPagedList<Staj1_MvcProje.Models.Entity.TBLSATISLAR>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<h2>Satış Listesi</h2>

<table class=" table table-bordered">
    <tr>
        <th>ID</th>
        <th>ÜRÜN ADI</th>
        <th>ADET</th>
        <th>FİYAT</th>
        <th>TARİH</th>
    </tr>
    <tbody>

        @foreach (var satis in Model)
        {
            <tr>
                <td>@satis.SATISID</td>
                <td>@satis.TBLURUNLER.URUNAD</td>
                <td>@satis.ADET</td>
                <td>@satis.FIYAT</td>
                <td>@Convert.ToDateTime(satis.TARIH).ToString("dd/MM/yy")</td>

            </tr>
        }
    </tbody>
</table>














